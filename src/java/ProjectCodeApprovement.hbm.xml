<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mazars.management.db.domain">
  <class name="ProjectCodeApprovement" table="project_code_approvement">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property name="year"/>
    <property name="month"/>
    <property name="isPrimaryApproved" not-null="true"/>
    <property name="primaryApprovedAt" not-null="false"/>
    <many-to-one class="Employee" column="primary_approved_by_id" name="primaryApprovedBy" not-null="false"/>
    
    <property name="isSecondaryApproved" not-null="true"/>
    <property name="secondaryApprovedAt" not-null="false"/>
    <many-to-one class="Employee" column="secondary_approved_by_id" name="secondaryApprovedBy" not-null="false"/>

    <many-to-one class="ProjectCode" name="projectCode">
      <column name="project_code_id" not-null="true"/>
    </many-to-one>  
  </class>
</hibernate-mapping>
