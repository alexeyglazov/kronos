<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mazars.management.db.domain">
  <class name="ActRequest" table="act_request">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property length="4096" name="description"/>
    <property name="reference"/>
    <property name="date"/>
    <property name="isCancelled" not-null="true"/>
    <property name="isExternallyCancelled" not-null="true"/>

    <many-to-one class="Currency" column="invoice_currency_id" name="invoiceCurrency" not-null="true"/>
    <many-to-one class="Currency" column="payment_currency_id" name="paymentCurrency" not-null="true"/>
    <many-to-one class="InvoiceRequestPacket" name="invoiceRequestPacket">
      <column name="invoice_request_packet_id" not-null="true"/>
    </many-to-one>
    <many-to-one class="Client" name="client">
      <column name="client_id" not-null="true"/>
    </many-to-one>
    <set inverse="true" name="actRequestItems">
      <key>
        <column name="act_request_id" not-null="true"/>
      </key>
      <one-to-many class="ActRequestItem"/>
    </set>   
  </class>
</hibernate-mapping>
