<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mazars.management.db.domain">
  <class name="Department" table="department">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property name="name"/>
    <property name="codeName"/>
    <property name="description"/>
    <property name="isActive" not-null="true"/>
    <property name="isBusinessTrippable" not-null="true"/>
    <set inverse="true" name="subdepartments" table="subdepartment">
      <key>
        <column name="department_id" not-null="true"/>
      </key>
      <one-to-many class="Subdepartment"/>
    </set>
    <many-to-one class="Office" name="office">
      <column name="office_id" not-null="true"/>
    </many-to-one>
  </class>
</hibernate-mapping>
