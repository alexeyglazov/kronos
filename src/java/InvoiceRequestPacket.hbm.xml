<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mazars.management.db.domain">
  <class name="InvoiceRequestPacket" table="invoice_request_packet">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property name="withVAT"/>
    <property name="status"/>
    <property name="comment"/>
    <many-to-one class="ProjectCode" name="projectCode">
      <column name="project_code_id" not-null="true"/>
    </many-to-one>
    <set inverse="true" name="invoiceRequests">
      <key column="invoice_request_packet_id"/>
      <one-to-many class="InvoiceRequest"/>
    </set>
    <one-to-one name="taxInvoiceRequest" property-ref="invoiceRequestPacket"/>
    <one-to-one name="actRequest" property-ref="invoiceRequestPacket"/>
    <set inverse="true" name="invoiceRequestPacketHistoryItems">
      <key>
        <column name="invoice_request_packet_id" not-null="true"/>
      </key>
      <one-to-many class="InvoiceRequestPacketHistoryItem"/>
    </set>    
  </class>
</hibernate-mapping>
