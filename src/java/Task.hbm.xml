<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mazars.management.db.domain">
  <class name="Task" table="task">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property name="name" not-null="true"/>
    <property name="isActive"/>
    <property name="isIdle" not-null="true"/>
    <property name="isTraining"/>
    <property length="1024" name="description"/>
    <property name="color" not-null="false"/>
    <many-to-one class="TaskType" column="task_type_id" name="taskType" not-null="true"/>
    <set inverse="true" name="timeSpentItems">
      <key column="task_id"/>
      <one-to-many class="TimeSpentItem"/>
    </set>
    <set inverse="true" name="planningGroups">
      <key>
        <column name="task_id" not-null="false"/>
      </key>
      <one-to-many class="PlanningGroup"/>
    </set>     
  </class>
</hibernate-mapping>
