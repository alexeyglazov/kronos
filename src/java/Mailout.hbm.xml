<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mazars.management.db.domain">
  <class name="Mailout" table="mailout">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property name="name"/>
    <property name="description" length="1024"/>
    <property name="senderName" />
    <property name="subject" />
    <property name="testTo"/>
    <property name="replyTo"/>
    <property name="dispositionNotificationTo"/>
    <property name="status" not-null="true"/>
    <property name="delay" not-null="true"/>
    <property name="partSize" not-null="true"/>
    <property name="jsonMailoutContent" length="65536"/>                           
    <set inverse="true" name="mailoutRecipients">
      <key>
        <column name="mailout_id" not-null="true"/>
      </key>
      <one-to-many class="MailoutRecipient"/>
    </set>
    <set inverse="true" name="mailoutHistoryItems">
      <key>
        <column name="mailout_id" not-null="true"/>
      </key>
      <one-to-many class="MailoutHistoryItem"/>
    </set>            
  </class>
</hibernate-mapping>
