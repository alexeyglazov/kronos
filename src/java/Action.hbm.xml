<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mazars.management.db.domain">
  <class name="Action" table="action">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property name="time"/>
    <property name="remoteAddr"/>
    <property name="remotePort"/>
    <property name="method"/>
    <property name="requestURI" length="4096"/>
    <property name="protocol"/>
    <property name="scheme"/>
    <property name="comment" length="65536"/>
    <many-to-one class="Employee" name="employee">
      <column name="employee_id" not-null="true"/>
    </many-to-one>

    <set inverse="true" name="actionParameters">
      <key>
        <column name="action_id" not-null="true"/>
      </key>
      <one-to-many class="ActionParameter"/>
    </set>
  </class>
</hibernate-mapping>
